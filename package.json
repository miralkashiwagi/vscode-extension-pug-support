{
  "name": "pug-support",
  "displayName": "Pug Support",
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "description": "Syntax highlighting, syntax checking, input aids, formatters",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onFile:pug",
    "onFile:jade"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jade",
        "aliases": [
          "Jade",
          "jade"
        ],
        "extensions": [
          ".jade"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "pug",
        "aliases": [
          "Pug",
          "pug"
        ],
        "extensions": [
          ".pug"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jade",
        "scopeName": "text.jade",
        "path": "./syntaxes/jade.tmLanguage.json"
      },
      {
        "language": "pug",
        "scopeName": "text.pug",
        "path": "./syntaxes/pug.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "pug-support.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pug.format",
        "title": "Format Pug Document"
      },
      {
        "command": "pug.validate",
        "title": "Validate Pug Document"
      },
      {
        "command": "pug-support.findTodos",
        "title": "Pug/Jade: Find TODOs in Workspace",
        "category": "Pug"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "prettier": "^3.0.0",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/prettier": "^2.7.0",
    "@types/pug": "^2.0.10"
  },
  "dependencies": {
    "pug-lexer": "^5.0.1",
    "pug-parser": "^6.0.0"
  }
}
