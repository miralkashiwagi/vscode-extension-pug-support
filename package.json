{
  "name": "pug-support",
  "displayName": "Pug Support",
  "publisher": "miral-kashiwagi",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "description": "Advanced Pug language features (Go to Definition, References, Rename, etc.) using extension-based detection - No language conflicts",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pug.pasteWithFormatting",
        "title": "Paste with Pug Formatting"
      }
    ],
    "keybindings": [
      {
        "command": "pug.pasteWithFormatting",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && resourceExtname == .pug"
      }
    ],

    "menus": {
      "editor/context": [
        {
          "command": "pug.pasteWithFormatting",
          "when": "resourceExtname == .pug",
          "group": "9_cutcopypaste"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/pug": "^2.0.10",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "pug-lexer": "^5.0.1",
    "pug-parser": "^6.0.0"
  }
}
