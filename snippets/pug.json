{
  "Mixin": {
    "prefix": "mixin",
    "body": [
      "mixin ${1:mixinName}(${2:params})",
      "\t${3:content}",
      "",
      "+${1:mixinName}(${4:args})"
    ],
    "description": "Create a mixin declaration and call"
  },
  "Include": {
    "prefix": "include",
    "body": [
      "include ${1:filename}"
    ],
    "description": "Include another Pug file"
  },
  "Extend": {
    "prefix": "extends",
    "body": [
      "extends ${1:layout}"
    ],
    "description": "Extend a layout template"
  },
  "Block": {
    "prefix": "block",
    "body": [
      "block ${1:name}",
      "\t${2:content}"
    ],
    "description": "Define a block for template inheritance"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition}",
      "\t${2:content}"
    ],
    "description": "Conditional statement"
  },
  "If-Else Statement": {
    "prefix": "ifelse",
    "body": [
      "if ${1:condition}",
      "\t${2:if-content}",
      "else",
      "\t${3:else-content}"
    ],
    "description": "If-else conditional statement"
  },
  "Each Loop": {
    "prefix": "each",
    "body": [
      "each ${1:item} in ${2:array}",
      "\t${3:content}"
    ],
    "description": "Each loop for iterating arrays"
  },
  "Case Statement": {
    "prefix": "case",
    "body": [
      "case ${1:variable}",
      "\twhen '${2:value1}'",
      "\t\t${3:content1}",
      "\twhen '${4:value2}'",
      "\t\t${5:content2}",
      "\tdefault",
      "\t\t${6:default-content}"
    ],
    "description": "Case/switch statement"
  },
  "HTML5 Doctype": {
    "prefix": "doctype",
    "body": [
      "doctype html"
    ],
    "description": "HTML5 doctype declaration"
  },
  "Basic HTML Structure": {
    "prefix": "html5",
    "body": [
      "doctype html",
      "html(lang=\"${1:en}\")",
      "\thead",
      "\t\tmeta(charset=\"UTF-8\")",
      "\t\tmeta(name=\"viewport\", content=\"width=device-width, initial-scale=1.0\")",
      "\t\ttitle ${2:Document Title}",
      "\tbody",
      "\t\t${3:content}"
    ],
    "description": "Basic HTML5 structure"
  },
  "Form": {
    "prefix": "form",
    "body": [
      "form(action=\"${1:#}\", method=\"${2:post}\")",
      "\t${3:form-content}",
      "\tinput(type=\"submit\", value=\"${4:Submit}\")"
    ],
    "description": "Basic form structure"
  },
  "Table": {
    "prefix": "table",
    "body": [
      "table",
      "\tthead",
      "\t\ttr",
      "\t\t\tth ${1:Header 1}",
      "\t\t\tth ${2:Header 2}",
      "\ttbody",
      "\t\ttr",
      "\t\t\ttd ${3:Cell 1}",
      "\t\t\ttd ${4:Cell 2}"
    ],
    "description": "Basic table structure"
  },
  "Link": {
    "prefix": "a",
    "body": [
      "a(href=\"${1:#}\") ${2:Link Text}"
    ],
    "description": "Anchor link"
  },
  "Image": {
    "prefix": "img",
    "body": [
      "img(src=\"${1:image.jpg}\", alt=\"${2:Alt text}\")"
    ],
    "description": "Image element"
  },
  "Script": {
    "prefix": "script",
    "body": [
      "script(src=\"${1:script.js}\")"
    ],
    "description": "Script tag"
  },
  "CSS Link": {
    "prefix": "css",
    "body": [
      "link(rel=\"stylesheet\", href=\"${1:style.css}\")"
    ],
    "description": "CSS link tag"
  }
} 